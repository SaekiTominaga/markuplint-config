{
	"rules": {
		"attr-duplication": true,
		"character-reference": false,
		"deprecated-attr": true,
		"deprecated-element": true,
		"disallowed-element": [],
		"doctype": true,
		"id-duplication": true,
		"ineffective-attr": true,
		"invalid-attr": {
			"option": {
				"attrs": {
					"accesskey": {
						"disallowed": true
					},
					"tabindex": {
						"enum": [
							"-1",
							"0"
						]
					}
				}
			}
		},
		"permitted-contents": true,
		"required-attr": true,
		"required-element": false,
		"landmark-roles": true,
		"no-refer-to-non-existent-id": true,
		"require-accessible-name": true,
		"required-h1": true,
		"use-list": false,
		"wai-aria": true,
		"class-naming": false,
		"no-hard-code-id": false,
		"no-use-event-handler-attr": true,
		"attr-equal-space-after": "never",
		"attr-equal-space-before": "never",
		"attr-spacing": {
			"option": {
				"width": 1
			}
		},
		"attr-value-quotes": "double",
		"case-sensitive-attr-name": "lower",
		"case-sensitive-tag-name": "lower",
		"end-tag": true,
		"indentation": false,
		"no-boolean-attr-value": false,
		"no-default-value": true
	},
	"nodeRules": [
		{
			"selector": "html",
			"rules": {
				"invalid-attr": {
					"option": {
						"ignoreAttrNamePrefix": [
							"prefix"
						]
					}
				},
				"required-attr": [
					"lang"
				]
			}
		},
		{
			"selector": "meta[property]",
			"rules": {
				"invalid-attr": {
					"option": {
						"attrs": {
							"property": {
								"pattern": "/^og:[a-z_]+/"
							},
							"content": {
								"type": "NoEmptyAny"
							}
						}
					}
				},
				"required-attr": false
			}
		},
		{
			"selector": "div",
			"rules": {
				"required-attr": [
					"class"
				]
			}
		},
		{
			"selector": "dl > div, object > div",
			"rules": {
				"required-attr": false
			}
		},
		{
			"selector": "abbr",
			"rules": {
				"required-attr": [
					"title"
				]
			}
		},
		{
			"selector": "img",
			"rules": {
				"required-attr": [
					"alt"
				]
			}
		},
		{
			"selector": "iframe",
			"rules": {
				"required-attr": [
					"title"
				]
			}
		},
		{
			"selector": "object",
			"rules": {
				"required-attr": [
					"type",
					"role",
					"aria-labelledby"
				]
			}
		},
		{
			"selector": "thead th",
			"rules": {
				"required-attr": [
					{
						"name": "scope",
						"value": [
							"col",
							"colgroup"
						]
					}
				]
			}
		},
		{
			"selector": "tbody th",
			"rules": {
				"required-attr": [
					{
						"name": "scope",
						"value": [
							"row",
							"rowgroup"
						]
					}
				]
			}
		},
		{
			"selector": "template *",
			"rules": {
				"require-accessible-name": false
			}
		}
	]
}
